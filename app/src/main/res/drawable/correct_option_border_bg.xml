<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"
    >
<!--What shape do we want it to be-->

<!--Stroke is basically a line(border)-->
    <stroke
        android:width="1dp"
        android:color="#E8E8E8"/>

<!--Solid refers to the background-->
    <solid
        android:color="@android:color/holo_green_light"/>

<!--We use radius for smoother corners-->
    <corners
        android:radius="8dp"/>

</shape>